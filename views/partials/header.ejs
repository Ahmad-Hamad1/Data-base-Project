<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <!-- <link rel="icon" href="/img/logo.png" type="image/png" /> -->
  <title>ITech</title>
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,700" rel="stylesheet">
  <link rel="stylesheet" href="/fonts/banker/icomoon/style.css">

  <link rel="stylesheet" href="/CSS/banker/bootstrap.min.css">
  <link rel="stylesheet" href="/CSS/banker/jquery-ui.css">
  <link rel="stylesheet" href="/CSS/banker/owl.carousel.min.css">
  <link rel="stylesheet" href="/CSS/banker/owl.theme.default.min.css">
  <link rel="stylesheet" href="/CSS/banker/owl.theme.default.min.css">

  <link rel="stylesheet" href="/CSS/banker/jquery.fancybox.min.css">

  <link rel="stylesheet" href="/CSS/banker/bootstrap-datepicker.css">

  <link rel="stylesheet" href="/fonts/banker/flaticon/font/flaticon.css">

  <link rel="stylesheet" href="/CSS/banker/aos.css">

  <link rel="stylesheet" href="/CSS/banker/style.css">


  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="/css/bootstrap.css" />
  <link rel="stylesheet" href="/vendors/linericon/style.css" />
  <link rel="stylesheet" href="/css/font-awesome.min.css" />
  <link rel="stylesheet" href="/css/themify-icons.css" />
  <link rel="stylesheet" href="/css/flaticon.css" />
  <link rel="stylesheet" href="/vendors/owl-carousel/owl.carousel.min.css" />
  <link rel="stylesheet" href="/vendors/lightbox/simpleLightbox.css" />
  <link rel="stylesheet" href="/vendors/nice-select/css/nice-select.css" />
  <link rel="stylesheet" href="/vendors/animate-css/animate.css" />
  <link rel="stylesheet" href="/vendors/jquery-ui/jquery-ui.css" />
  <!-- main css -->
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="/css/responsive.css" />
</head>

<body>
  <header class="header_area">
    <div class="top_menu">
      <div class="container">
        <div class="row">
          <div class="col-lg-7">
            <div class="float-left">
              <p>Telephone: 2970008</p>
            </div>
          </div>
          <div class="col-lg-5">
            <div class="float-right">
              <ul class="right_side">
                <li>
                  <a href="/contact">
                    Contact Us
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="main_menu">
      <div class="container">
        <nav class="navbar navbar-expand-lg navbar-light w-100">
          <!-- Brand and toggle get grouped for better mobile display -->
          <a class="navbar-brand logo_h" href="/">
            <img src="/img/logo.png" alt="" />
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse offset w-100" id="navbarSupportedContent">
            <div class="row w-100 mr-0">
              <div class="col-lg-7 pr-0">
                <ul class="nav navbar-nav center_nav pull-right">
                  <li class="nav-item <%= title === '/' ? 'active' : '' %>">
                    <a class="nav-link" href="/">Home</a>
                  </li>
                  <li class="nav-item submenu dropdown <%= title === 'shop' ? 'active' : '' %>">
                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                      aria-expanded="false">Shop</a>
                    <ul class="dropdown-menu">
                      <li class="nav-item">
                        <a class="nav-link" href="/shop">Shop Category</a>
                      </li>
                      <% if(user){ %>
                        <li class="nav-item">
                          <a class="nav-link" href="/checkout">Product Checkout</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" href="/cart">Shopping Cart</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" href="/orders">Orders</a>
                        </li>
                      <% } %>
                    </ul>
                  </li>
                  <% if(user && user.admin){ %>
                    <li class="nav-item submenu dropdown <%= title === 'Edit Product' || title === 'Add Product' ? 'active' : '' %>">
                      <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                        aria-expanded="false">Admin</a>
                      <ul class="dropdown-menu">
                        <li class="nav-item">
                          <a class="nav-link" href="/add-product">Add Product</a>
                        </li>
                      </ul>
                    </li>
                  <% } %>
                  <% if(!user || (user && !user.admin)){ %>
                    <li class="nav-item <%= title === 'contact' ? 'active' : '' %>">
                      <a class="nav-link" href="/contact">Contact</a>
                    </li>
                  <% } %>
                </ul>
              </div>

              <div class="col-lg-5 pr-0">
                <ul class="nav navbar-nav navbar-right right_nav pull-right">
                  <% if(user){ %>
                    <li class="nav-item">
                      <a href="/cart" class="icons">
                        <i class="ti-shopping-cart"></i>
                      </a>
                    </li>
                    <li class="nav-item">
                      <a href="/logout" class="icons">
                        <img src="/img/signout.png" alt="Log Out">
                      </a>
                    </li>
                  <% } %>
                  <% if(!user){ %>
                    <li class="nav-item">
                      <a href="/signin" class="icons">
                        <i class="ti-user" aria-hidden="true"></i>
                      </a>
                    </li>
                    <li class="nav-item">
                      <a href="/signup" class="icons">
                        <i class="ti-plus" aria-hidden="true"></i>
                      </a>
                    </li>
                  <% } %> 
                </ul>
              </div>
            </div>
          </div>
        </nav>
      </div>
    </div>
  </header>
  <% if(error && error.length > 0){ %>
    <div class="alert alert-danger" role="alert" style="text-align: center;">
      <%= error %>
    </div>
  <% } else if(success && success.length > 0){ %>
    <div class="alert alert-success" role="alert" style="text-align: center;">
      <%= success %>
    </div>
  <% } %>
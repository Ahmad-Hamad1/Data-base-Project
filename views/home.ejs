<%- include('partials/header.ejs') %>

      <!--================Home Banner Area =================-->
  <section class="home_banner_area mb-40" style="
  height: 480px;width: 1140px;
  background: url(/img/banner/home.jpg);
  background-repeat: no-repeat;
  background-size: cover;
  margin-left: 187px;
  min-height: 480px;
  ">
  </section>
  <!--================End Home Banner Area =================-->

  <!--================ Feature Product Area =================-->
  <% if(products.length > 0){ %> 
    <section class="feature_product_area section_gap_bottom_custom">
      <div class="container">
        <div class="row justify-content-center">
        </div>
        <div class="row">
          <% for(var i = 0;i < 3 && i < products.length;i++) { %>
            <div class="col-lg-4 col-md-6">
              <div class="single-product">
                <div class="product-img" style="height: 300px;">
                  <img class="img-fluid w-100" src="/<%= products[i].image %>" alt="<%= products[i].name %>" style="height: 300px;"/>
                  <div class="p_icon">
                    <a href="/product/<%= products[i].productId %>">
                      <i class="ti-eye"></i>
                    </a>
                    <form style="all:unset;" action="/cart/<%= products[i].productId %>" method="POST">
                      <input type="hidden" name="productQty" value="<%= products[i].qty %>">
                      <input type="hidden" name="qty" value="1"/>
                      <button style="all: unset; cursor: pointer;">
                        <a style="cursor: pointer;"><i class="ti-shopping-cart"></i></a>
                      </button>
                    </form>
                    <% if(user && user.admin){ %>
                      <a href="/edit-product/<%= products[i].productId %>" style="margin-left:25px;">
                        <i class="ti-pencil"></i>
                      </a>
                    <% } %>
                  </div>
                </div>
                <div class="product-btm">
                  <a href="/product/<%= products[i].productId %>" class="d-block">
                    <h4><%= products[i].name.length > 30 ? products[i].name.substring(0, 31) + '....' : products[i].name %></h4>
                  </a>
                  <div class="mt-3">
                    <span class="mr-4">$<%= products[i].price %></span>
                  </div>
                </div>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    </section>
    <!--================ End Feature Product Area =================-->

    <!--================ New Product Area =================-->
    <% if(products.length > 3){ %> 
      <section class="new_product_area section_gap_top section_gap_bottom_custom">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-lg-12">
              <div class="main_title">
                <h2><span>New Products</span></h2>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-lg-6">
              <div class="new_product">
                <h3 class="text-uppercase"><%= products[3].name %></h3>
                <div class="product-img" >
                  <img class="img-fluid" src="/<%= products[3].image %>" alt="<%= products[3].name %>" />
                </div>
                <h4>$<%= products[3].price %></h4>
                <!-- <a href="/cart/<%= products[3].productId %>" class="main_btn">Add to cart</a> -->
                <form style="all:unset;" action="/cart/<%= products[3].productId %>" method="POST">
                  <input type="hidden" name="productQty" value="<%= products[3].qty %>">
                  <input type="hidden" name="qty" value="1"/>
                  <button style="all: unset; cursor: pointer;">
                    <a style="cursor: pointer; color: #FFF;" onmouseover="this.style.color='#71cd14'" onmouseout="this.style.color='#FFF'" class="main_btn">Add to cart</a>
                  </button>
                </form>
              </div>
            </div>
            <div class="col-lg-6 mt-5 mt-lg-0">
              <div class="row">
                <% for(var i = 4; i < 8 && i != products.length; i++){ %>
                  <div class="col-lg-6 col-md-6">
                    <div class="single-product">
                      <div class="product-img" style="height: 300px;">
                        <img class="img-fluid w-100" src="/<%= products[i].image %>" alt="<%= products[i].name %>" style="height: 300px;"/>
                        <div class="p_icon">
                          <a href="/product/<%= products[i].productId %>">
                            <i class="ti-eye"></i>
                          </a>
                          <form style="all:unset;" action="/cart/<%= products[i].productId %>" method="POST">
                            <input type="hidden" name="productQty" value="<%= products[i].qty %>">
                            <input type="hidden" name="qty" value="1"/>
                            <button style="all: unset; cursor: pointer;">
                              <a style="cursor: pointer;"><i class="ti-shopping-cart"></i></a>
                            </button>
                          </form>
                          <% if(user && user.admin){ %>
                            <a href="/edit-product/<%= products[i].productId %>" style="margin-left: 25px;">
                              <i class="ti-pencil"></i>
                            </a>
                          <% } %>
                        </div>
                      </div>
                      <div class="product-btm">
                        <a href="/product/<%= products[i].productId %>" class="d-block">
                          <h4><%= products[i].name.length > 25 ? products[i].name.substring(0, 24) + '....' : products[i].name %></h4>
                        </a>
                        <div class="mt-3">
                          <span class="mr-4">$<%= products[i].price %></span>
                        </div>
                      </div>
                    </div>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      </section>
    <% } %>
  <% } else{ %>
    <div class="alert alert-info" role="alert" style="text-align: center; font-weight: bold;">
      No products Available
    </div>
  <% } %>
  <!--================ End New Product Area =================-->

<%- include('partials/footer.ejs') %>